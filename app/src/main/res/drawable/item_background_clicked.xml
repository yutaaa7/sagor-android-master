<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/_11dp" />
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp" />
        </shape>
    </item>

    <!-- Inner shadow layer to create the shadow effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#55000000" /> <!-- Shadow color -->
            <corners android:radius="@dimen/_11dp" />
        </shape>
    </item>

    <!-- Main shape layer -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke android:color="@color/theme_blue" android:width="@dimen/_1dp" />
            <solid android:color="@android:color/white" /> <!-- Background color -->
            <corners android:radius="@dimen/_11dp" />
        </shape>
    </item>
</layer-list>
