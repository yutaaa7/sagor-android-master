<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_260dp"
        android:background="@drawable/solid_bottom_curve">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_net"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/textViewPoppinMediFont"
                android:text="@string/turn_on_your_notifications" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubTitle"
                style="@style/textViewPoppinLightFont"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:gravity="center"
                android:text="@string/you_ll_receive_updates_on_your_bus_route_including_delays_and_schedule_changes" />

        </LinearLayout>


    </RelativeLayout>
</layout>
