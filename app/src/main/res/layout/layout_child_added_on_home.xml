<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_8dp"
        app:cardCornerRadius="@dimen/_10dp"
        app:cardElevation="@dimen/_8dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginTop="@dimen/_16dp"
        android:layout_marginBottom="@dimen/_16dp"
        android:shadowColor="@color/gray"
        android:shadowRadius="10"
        android:id="@+id/cardChild">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_16dp"

            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvChildNameHome"
                style="@style/textViewPoppinSemiBold"
                android:text="John Deo"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_18sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rideText"

                style="@style/textViewPoppinRegularFont"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/no_active_rides"
                android:textColor="@color/red"
                android:textSize="@dimen/tv_15sp" />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btTrack"
                style="@style/themeGrayButtonView"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/track_your_bus"
                android:textColor="@color/white" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</layout>