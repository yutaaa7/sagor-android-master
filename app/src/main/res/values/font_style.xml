<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RadioButtontheme" parent="Widget.AppCompat.CompoundButton.RadioButton">

        <item name="buttonTint">@android:color/transparent</item>
    </style>


        <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
            <item name="android:button">@drawable/checkbox_selector</item>
            <item name="android:buttonTint">@android:color/transparent</item>
        </style>


    <style name="textViewPoppinRegularFont">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/tv_34sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="textViewPoppinBoldFont">
